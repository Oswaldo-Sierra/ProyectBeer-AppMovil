<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Top header -->
    <View
        android:id="@+id/idTopView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/background_view" />

    <!-- Title -->
    <TextView
        android:id="@+id/idTitleDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TitleView"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- Grid with all cards -->
    <GridLayout
        android:id="@+id/idGridDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTopView"
        android:rowCount="4"
        android:columnCount="2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="-50dp"
        >

        <!-- ====== ROW 0: USERS ====== -->

        <!-- Show users -->
        <androidx.cardview.widget.CardView
            android:id="@+id/idCardShowUsers"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp"
            android:layout_margin="10dp"
            android:layout_row="0"
            android:layout_column="0"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/idImageShowUsers"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/outline_account_circle_24" />

                <TextView
                    android:id="@+id/idTextShowUsers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Main_User"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Create user -->
        <androidx.cardview.widget.CardView
            android:id="@+id/idCardCreateUser"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp"
            android:layout_margin="10dp"
            android:layout_row="0"
            android:layout_column="1"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/idImageCreateUser"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/outline_account_circle_24" />

                <TextView
                    android:id="@+id/idTextCreateUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Main_AddUser"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ====== ROW 1: OBJECT 1 ====== -->

        <androidx.cardview.widget.CardView
            android:id="@+id/idCardShowBeer"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp"
            android:layout_margin="10dp"
            android:layout_row="1"
            android:layout_column="0"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/idImageViewObject1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/outline_beer_meal_24" />

                <TextView
                    android:id="@+id/idTextViewObject1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Main_Beer"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/idcardCreateBeer"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp"
            android:layout_margin="10dp"
            android:layout_row="1"
            android:layout_column="1"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/idImageCreateObject1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/outline_beer_meal_24" />

                <TextView
                    android:id="@+id/idTextCreateObject1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Main_AddBeer"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ====== ROW 2: OBJECT 2 ====== -->

        <androidx.cardview.widget.CardView
            android:id="@+id/idCardShowSalesOfBeer"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp"
            android:layout_margin="10dp"
            android:layout_row="2"
            android:layout_column="0"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/idImageViewObject2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/shopping_cart" />

                <TextView
                    android:id="@+id/idTextViewObject2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Main_Sales"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/idCardCreateSales"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp"
            android:layout_margin="10dp"
            android:layout_row="2"
            android:layout_column="1"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/idImageCreateObject2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/outline_add_shopping_cart_24" />

                <TextView
                    android:id="@+id/idTextCreateObject2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Main_AddSales"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ====== ROW 3: SETTINGS ====== -->

        <androidx.cardview.widget.CardView
            android:id="@+id/idCardInfo"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp"
            android:layout_margin="10dp"
            android:layout_row="3"
            android:layout_column="0"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/idImageInfo"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/outline_info_24" />

                <TextView
                    android:id="@+id/idTextInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Main_Info"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/idCardLogout"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp"
            android:layout_margin="10dp"
            android:layout_row="3"
            android:layout_column="1"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/idImageLogout"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/outline_account_circle_off_24" />

                <TextView
                    android:id="@+id/idTextLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Main_Close"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

</RelativeLayout>